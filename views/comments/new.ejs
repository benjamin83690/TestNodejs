<% include ../partials/header %>

<div class="container">
    <div class="row row-form">
        <h1 class="title-newC text-white">Nouveau commentaire pour <%= campground.name %> </h1>
        <div class="box-form">
            <div class="jumbotron jumb-form">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <label for="text">Votre commentaire :</label>
                        <textarea name="comment[text]" id="text" cols="50" rows="5" placeholder="Your comment" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg mt-4 btn-block">Ajouter</button>
                    </div>
                </form>
            </div>
            <a class="btn btn-primary btn-sm" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>