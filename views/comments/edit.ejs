<% include ../partials/header %>

<div class="container">
    <div class="row row-form">
        <h1 class="title-newC text-white">Modifier un commentaire :</h1>
        <div class="box-form">
            <div class="jumbotron jumb-form">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="text">Votre commentaire :</label>
                        <textarea name="comment[text]" id="text" cols="50" rows="5" required><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg mt-4 btn-block">Modifier</button>
                    </div>
                </form>
            </div>
            <a class="btn btn-primary btn-sm" href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>