<% include ../partials/header %>

<div class="container">
    <div class="row">

        <div class="col-md-3">
            <p class="lead text-white">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow" id="card-show">
                <img src="<%= campground.image %>" class="card-img-top shadow-sm" alt="campground">
                <div class="card-body">
                    <div class="right"><h4>$9.00/night</h4></div>
                    <h3 class="card-title"> <a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a> </h3>
                    <hr>                                                      
                    <p class="card-text"> <%= campground.description %> </p>
                    <p><em> Submitted By : <%= campground.author.username %></em></p>
                    <% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id %>/edit">Modifier</a>
                        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="form-delete">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>                       
                   <% } %>
                </div>
            </div>

            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(comment => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="right">10 days ago</span>
                            <p><%= comment.text %></p>
                            <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                                <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Modifier</a>
                                <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" class="form-delete">
                                    <button class="btn btn-danger btn-sm">Supprimer</button>
                                </form>
                            <% } %>                            
                        </div>
                    </div>
                <% }); %>                
            </div>
            <a class="btn btn-primary btn-sm my-4" href="/campgrounds">Go Back</a>          
        </div>

    </div>
</div>

<% include ../partials/footer %>
